---
import LinkIcon from '../Icons/LinkIcon.astro'
import { Image } from 'astro:assets'
import '@/styles/globals.css'

interface Props {
	title: string
	quantity: string
	href?: string
	image: string
	alt?: string
}

const { title, quantity, href, image, alt } = Astro.props
---

<section>
	<div
		class='relative text-gray-700 bg-white border border-neutral-500 transition-all duration-100 transform scale-100 hover:scale-101 w-72 lg:w-[320px] rounded-lg'
	>
		<a href={href} class='flex items-center flex-col justify-center'>
			<div
				class='flex justify-between items-center border-b border-neutral-500 w-full px-4 py-2 text-black'
			>
				<h3
					class='flex flex-col text-xl font-GilroyBold leading-snug tracking-normal'
				>
					{title}
					<span class='font-GilroyRegular text-sm text-gray-500'>
						{quantity}
					</span>
				</h3>
				<LinkIcon />
			</div>
			<div
				class='drop-shadow-[0_1px_15px_rgba(0,0,0,0.15)] dark:drop-shadow-[0_1px_15px_rgba(255,255,255,0.15)] select-none'
			>
				<Image src={image} alt={alt ?? ''} width='250' height='250' />
			</div>
		</a>
	</div>
</section>
