---
interface Props {
	text: string
	href: string
}

const { text, href } = Astro.props
---

<a href={href}>
	<span
		class='inline-flex items-center justify-center rounded-full font-GilroySemibold border border-[#cea472] bg-[#fbf8f1] select-none space-x-2 whitespace-nowrap px-3 py-1.5 text-sm backdrop-blur'
	>
		{text}
	</span>
</a>
